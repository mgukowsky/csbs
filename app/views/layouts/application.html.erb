<!DOCTYPE html>
<html>
<head>
  <title>Csbs</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:notice] %>
    <% flash[:notice].each do |notice| %>
      <%= notice %>
    <% end %>
  <% end %>

  <% if flash[:errors]%>
    <% flash[:errors].each do |error| %>
      <%= error %>;
    <% end %>
  <% end %>

  <%= yield %>

  <% if signed_in? %>
    <h3>Signed in as <%= current_user.username %></h3>
    <%= render partial: "layouts/signout" %>
  <% else %>
    <%= render partial: "layouts/signin" %>
  <% end %>
</body>
</html>
